<Window x:Class="CoffeShop.View.Dialog.ErrorLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeShop.View.Dialog" xmlns:UC="clr-namespace:CoffeShop.UserControlCoffeeShop"
        mc:Ignorable="d" Name="errorLogin" Title="Thất bại" WindowStartupLocation="CenterScreen"
        Height="150" Width="250" WindowStyle="None">
    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <UC:ControlBar  Grid.Row="0" Tag="{Binding Title,ElementName=errorLogin}"></UC:ControlBar>
        <Grid Grid.Row="1" Background="OrangeRed">
            <TextBlock  Grid.Row="1" Text="Sai tài khoản hoặc mật khẩu" FontSize="14" FontFamily="Adobe Gothic Std B"
                   HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </Grid>
        
    </Grid>
</Window>
